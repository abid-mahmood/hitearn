<div class='site-name'> 
  <span>Hit&amp;Earn </span>
  <div class='container-site'> 
    <span><%= link_to 'Home', homes_path, method: :get, class: 'home' %></span>
    <% if session[:current_user].present? && session[:admin] == true %>
      <span><%= link_to 'Admin', user_home_users_path, :method => :post, class: 'home btn btn-default' %></span>
    <% elsif session[:current_user].present? %>
      <span><%= link_to 'My Profile', user_panel_users_path, :method => :get, class: 'home' %></span>
    <% end %>
    <span> <%= link_to 'Earn Money', earn_money_advertisements_path, method: :get, class: 'e-m' %></span>

    <span> 
      <% if session[:current_user].present? %>
        <%= link_to 'Logout', logout_users_path, method: :get, class: 'l-i' %> 
      <% else %>
        <%= link_to 'Login', login_users_path, method: :get, class: 'l-i' %> 
      <% end %>
    </span>
    <% if session[:current_user].nil? %>
      <span> <%= link_to 'Register', new_user_path, class: 'reg' %> </span>
    <% end %>
  </div>
</div>